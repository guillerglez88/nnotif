{
  "name": "nnotif-dynarest",
  "scripts": {
    "start": "node ./dist/bin/www.js",
    "start:dev": "npm-run-all build:dev debug",
    "dev": "nodemon --watch src -e ts,json,js --exec npm run start:dev",
    "debug": "node --inspect=0.0.0.0 ./dist/bin/www.js",
    "build": "npm-run-all clean tsc copy-assets",
    "build:dev": "npm-run-all clean tsc:dev copy-assets",
    "tsc": "tsc -p tsconfig.json",
    "tsc:dev": "tsc --sourceMap true -p tsconfig.json",
    "check-types": "tsc --noEmit -p tsconfig.json",
    "copy-assets": "copyfiles -u 1 src/**/*.tpl dist/",
    "clean": "rimraf ./dist/*",
    "lint": "eslint --ext .js,.ts .",
    "lint-fix": "eslint --ext .js,.ts . --fix"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "debug": "~2.6.9",
    "dotenv": "~16.0.3",
    "express": "~4.18.2",
    "morgan": "~1.9.1",
    "mustache": "~4.2.0",
    "pg": "~8.9.0",
    "uuid": "~9.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.16",
    "@types/morgan": "^1.9.4",
    "@types/mustache": "4.2.2",
    "@types/node": "^18.11.18",
    "@types/pg": "~8.6.6",
    "@types/uuid": "9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^33.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.3",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.4"
  }
}
